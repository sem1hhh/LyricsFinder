@model LyricsFinder.Models.LyricsSearchViewModel

@{
    ViewData["Title"] = "Song Search Results";
}

<div class="container mt-4">
    <div class="mb-4">
        <a asp-controller="Lyrics" asp-action="Index" class="btn btn-outline-primary">
            <i class="fas fa-arrow-left"></i> New Search
        </a>
    </div>

    <div class="card shadow mb-4">
        <div class="card-header bg-primary text-white">
            <h3 class="mb-0">Search Results</h3>
        </div>
        <div class="card-body">
            <h4>You searched for:</h4>
            <div class="alert alert-info">
                <p class="mb-0"><i class="fas fa-quote-left text-muted me-2"></i>@Model.InputLyrics<i class="fas fa-quote-right text-muted ms-2"></i></p>
            </div>

            <div class="alert alert-info mt-4">
                <h5><i class="fas fa-info-circle me-2"></i>API URL Used</h5>
                <p class="mb-0">https://api.lyrics.ovh/suggest/@(string.IsNullOrEmpty(Model.InputLyrics) ? "" : Uri.EscapeDataString(Model.InputLyrics))</p>
            </div>

            @if (!Model.MatchedSongs.Any())
            {
                <div class="alert alert-warning mt-4">
                    <h5><i class="fas fa-exclamation-triangle me-2"></i>No matches found</h5>
                    <p>We couldn't find any songs matching your search. Please try a different search.</p>
                </div>
            }
            else
            {
                <h4 class="mt-4">Found @Model.MatchedSongs.Count matching songs:</h4>
                
                @if (Model.MatchedSongs.First().Title == "API Error" || 
                     Model.MatchedSongs.First().Title == "No Results Found" ||
                     Model.MatchedSongs.First().Title == "Error Occurred")
                {
                    <div class="alert alert-danger">
                        <h5>@Model.MatchedSongs.First().Title</h5>
                        <h6>@Model.MatchedSongs.First().Artist</h6>
                        <pre style="white-space: pre-wrap; max-height: 400px; overflow-y: auto;">@Model.MatchedSongs.First().Lyrics</pre>
                    </div>
                }
                else
                {
                    <div class="row">
                        @foreach (var song in Model.MatchedSongs)
                        {
                            <div class="col-md-6 mb-4">
                                <div class="card h-100 shadow-sm">
                                    <div class="row g-0">
                                        <div class="col-md-4">
                                            @if (!string.IsNullOrEmpty(song.AlbumCover))
                                            {
                                                <img src="@song.AlbumCover" class="card-img-top h-100 object-fit-cover" alt="@song.Title album cover">
                                            }
                                            else
                                            {
                                                <div class="bg-light d-flex justify-content-center align-items-center h-100" style="min-height: 150px;">
                                                    <i class="fas fa-music fa-3x text-muted"></i>
                                                </div>
                                            }
                                        </div>
                                        <div class="col-md-8">
                                            <div class="card-header d-flex justify-content-between align-items-center">
                                                <h5 class="mb-0">@song.Title</h5>
                                            </div>
                                            <div class="card-body">
                                                <div class="d-flex align-items-center mb-3">
                                                    @if (!string.IsNullOrEmpty(song.ArtistImage))
                                                    {
                                                        <img src="@song.ArtistImage" class="rounded-circle me-2" alt="@song.Artist" style="width: 40px; height: 40px; object-fit: cover;">
                                                    }
                                                    else
                                                    {
                                                        <div class="rounded-circle bg-secondary me-2 d-flex justify-content-center align-items-center" style="width: 40px; height: 40px;">
                                                            <i class="fas fa-user text-white"></i>
                                                        </div>
                                                    }
                                                    <h6 class="card-subtitle mb-0 text-muted">@song.Artist</h6>
                                                </div>
                                                
                                                @if (!string.IsNullOrEmpty(song.PreviewUrl))
                                                {
                                                    <div class="mb-3">
                                                        <audio controls style="width: 100%;">
                                                            <source src="@song.PreviewUrl" type="audio/mp3">
                                                            Your browser does not support the audio element.
                                                        </audio>
                                                    </div>
                                                }
                                                
                                                <div class="lyrics-preview mt-3">
                                                    <h6>Lyrics:</h6>
                                                    <p class="card-text" style="max-height: 150px; overflow-y: auto;">
                                                        @if (song.Lyrics?.Length > 300 && song.Lyrics != "Lyrics not available" && !song.Lyrics.StartsWith("API Response Preview"))
                                                        {
                                                            @(song.Lyrics.Substring(0, 300) + "...")
                                                        }
                                                        else
                                                        {
                                                            @song.Lyrics
                                                        }
                                                    </p>
                                                </div>
                                            </div>
                                        </div>
                                    </div>
                                </div>
                            </div>
                        }
                    </div>
                    
                    <div class="card mt-5">
                        <div class="card-header bg-secondary text-white">
                            <h5 class="mb-0">Debug Information - Raw API Response</h5>
                        </div>
                        <div class="card-body">
                            <pre style="white-space: pre-wrap; max-height: 300px; overflow-y: auto; font-size: 12px;">@(Model.MatchedSongs.FirstOrDefault()?.Lyrics?.StartsWith("API Response Preview") == true ? Model.MatchedSongs.First().Lyrics : "No debug information available")</pre>
                        </div>
                    </div>
                }
            }
        </div>
    </div>
</div> 